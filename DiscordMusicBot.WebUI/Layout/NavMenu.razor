<MudPaper Width="200" Class="pa-3 ma-3" Elevation="23">
    <MudNavMenu>
        <MudNavLink Icon="@Icons.Material.Filled.Home" Href="/">
            <MudText Align="Align.Center">Dashboard</MudText>
        </MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.Person" Href="/Settings">
            <MudText Align="Align.Center">Settings</MudText>
        </MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.Code" Href="/Music">
            <MudText Align="Align.Center">Music</MudText>
        </MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.Camera" Href="/About">
            <MudText Align="Align.Center">About</MudText>
        </MudNavLink>

    </MudNavMenu>
</MudPaper>

<MudPaper Width="200" Class="pa-3 ma-3" Elevation="23">
    <MudStack>
        @foreach (var contact in _contacts)
        {
            <MudButton Href=@contact.Value.Item1 StartIcon=@contact.Value.Item2>
                <MudText>@contact.Key</MudText>
            </MudButton>
        }
    </MudStack>
</MudPaper>

<MudPaper Width="200" Class="pa-3 ma-3" Elevation="23">
    <MudStack AlignItems="AlignItems.Center">
        <MudStack Row="true">
            <MudText>Contact</MudText>
            <MudIcon Icon="@Icons.Material.Filled.Mail"></MudIcon>
        </MudStack>
        <MudText>marcel-sigl@gmx.de</MudText>
    </MudStack>
</MudPaper>

@code {

    private readonly Dictionary<string, (string, string)> _contacts = new()
    {
        ["Twitter"] = ("https://x.com/Marcel_Sigl", @Icons.Custom.Brands.Twitter),
        ["GitHub"] = ("https://github.com/MarcelOwO", @Icons.Custom.Brands.GitHub),
        ["Instagram"] = ("https://www.instagram.com/marcel_sigl/ ", @Icons.Custom.Brands.Instagram),
        ["Steam"] = ("https://steamcommunity.com/id/Marcelowo", @Icons.Custom.Brands.Steam),
    };

}